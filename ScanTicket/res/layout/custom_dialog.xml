<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="310dp"
    android:orientation="vertical"
    android:background="#FFFFAD"
    android:layout_height="match_parent" >
    

    <TextView 
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="25sp"
        android:drawableLeft="@drawable/logo_small"
        android:textColor="@color/gri"
        android:paddingLeft="5dp"
        android:layout_marginTop="10dp"
        android:text="      "/>
    
    <View 
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/gri"/>
    
    <TextView
	    android:id="@+id/error_textView"
	    android:singleLine="false"
	    android:text="You are not connected to the internet. Check your connection and try again!"
	    android:background="@color/transparent"
	    android:layout_marginTop="5dp"
	    android:paddingRight="10dp"
	    android:gravity="center"
	    android:textColor="@color/gri"
	    android:paddingLeft="10dp"
	    android:layout_height="122dp" 
	    android:textSize="18sp"
	    android:layout_width="300dp" 
	    android:scrollbars="vertical"/>
    
    <View 
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/gri"/>

<LinearLayout
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_marginTop="5dp"
    android:layout_gravity="center"
    android:orientation="horizontal" >
    <Button
        android:id="@+id/button_yes"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="22sp"
        
        android:textStyle="bold"
        android:layout_gravity="center"
        android:textColor="@color/white"
        android:background="@drawable/yes_btn" />
    
    <Button
        android:id="@+id/button_no"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="22sp"
        android:textStyle="bold"
        android:layout_marginLeft="30dp"
        android:layout_gravity="center"
        android:textColor="@color/white"
        android:background="@drawable/no_btn" />
    
    </LinearLayout>
    
</LinearLayout>